#!/bin/bash

# Define the source folder
src_folder="/Users/nemasha/MyProjects/covor_naslavcea/photos_arch/all2/_all"

# Loop through all files in the source folder
for file in "$src_folder"/*; do
    # Get the filename without the path
    filename=$(basename "$file")
    
    # Get the extension of the file
    extension="${filename##*.}"

    # Loop to create 6 copies
    for i in {1..6}; do
        # Generate a random 2-digit number
        random_prefix=$(shuf -i 10-99 -n 1)
        
        # Create the new filename with the random prefix
        new_filename="${random_prefix}_${filename}"

        # Copy the file with the new name
        cp "$file" "$src_folder/$new_filename"
    done
done

echo "All images have been duplicated with random prefixes."

